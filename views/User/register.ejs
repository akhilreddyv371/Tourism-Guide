<% layout('layouts/boilerplate') %>
    <h1 class="text-center">Register</h1>
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <form action="/register" method="post" novalidate class="validated-Form">
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="email" clss="form-label">Email</label>
                            <input type="email" name="email" required id="email" class="form-control">
                            <div class="valid-feedback">
                                Looks good
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="username" clss="form-label">Username</label>
                            <input type="text" name="username" required id="username" class="form-control">
                            <div class="valid-feedback">
                                Looks good
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" clss="form-label">Password</label>
                            <input type="password" name="password"required id="password" class="form-control">
                            <div class="valid-feedback">
                                Looks good
                            </div>
                        </div>
                        <button class="btn btn-success w-100">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>