<% layout('layouts/boilerplate') %>
<div id="cluster-map" style="width: 100%; height: 500px;"></div>

<div class="m-3">
    <form action="/states">
        <div class="input-group w-80">
            <input type="text" class="form-control " id="price" name="search" placeholder="Search" aria-label="search" autofocus>
            <span class="input-group-text" id="price-label">
                <button class="btn btn-success">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </span>
        </div>
    </form>
</div>


<% for(let state of states) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" style="width:500px; height:300px" alt="" src="<%= state.image.url %>">
            </div>
            <div class="col-md-8">
                <div class="m-1">
                    <h5 class="card-body">State :<%= state.state %></h5>
                    <p class="card-text-bold">Description :<%=state.description%></p>
                    <a class="btn btn-primary " href="/states/<%= state._id %>">view <%= state.state%></a>
                </div>
            </div>
        </div>
    </div>
    <%}%> 

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const states = {features : <%- JSON.stringify(states) %>}
</script>
<script src="/javascripts/clusterMap.js"></script>